// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id    String  @id @default(cuid())
  name  String  @unique
  token String?
}

model AppSession {
  id      String @id
  shop    String
  payload Json
}
